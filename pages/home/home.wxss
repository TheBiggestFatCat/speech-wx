page {
  height: 100%;
  background-color: rgb(241, 241, 241);
}

.indexcontainer {
  padding: 40rpx;
  width: calc(100% - 80rpx);
  height: calc(100% - 80rpx);
}

.switch {
  position: relative;
  bottom: 4rpx;
  transition: all .3s;
  width: calc(100% / 4);
  height: 4rpx;
  background-color: #4271b8;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.header {
  border-left: 2px solid #4271b8;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
}

.top {
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-flow: nowrap row;
  justify-content: space-evenly;
  align-items: center;
  background-color: #fff;
  font-size: 28rpx;
}

.top-block {
  position: relative;
  width: 25%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.top-block view {
  position: absolute;
  bottom: 20rpx;
}

.top-block image {
  position: relative;
  bottom: 20rpx;
}

/* 宣讲 */
.speech-body {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  margin-bottom: 80rpx;
  padding: 0rpx 40rpx 0rpx 40rpx;
  box-sizing: border-box;
}

.enter-body {
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  margin-bottom: 80rpx;
  padding: 0rpx 40rpx 0rpx 40rpx;
  box-sizing: border-box; 
}

.speech-line1 {
  width: 100%;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.speech-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.speech-title {
  font-size: 44rpx;
  color: #4271b8;
  font-weight: 600;
  margin-left: 20rpx;
}

.speech-line2 {
  width: 100%;
  height: 30%;
  font-size: 26rpx; 
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.speech-line3 {
  width: 100%;
  font-size: 26rpx; 
  display: flex;
  justify-content: space-between;
  color: rgb(65, 65, 65);
}


/* 面试 */
.interview-item {
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.com {
  position: fixed;
  bottom: 20rpx;
  width: 200rpx;
  left: calc(50% - 100rpx);
}