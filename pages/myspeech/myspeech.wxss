page {
  height: 100%;
  background-color: rgb(241, 241, 241);
}

.div {
  padding: 40rpx;
  width: calc(100% - 80rpx);
  height: calc(100% - 80rpx);
  height: (100% - 80rpx);
}

.activity {
  background-color: #fff;
}

.table {
  position: relative;
  padding: 20rpx;
  display: flex;
  border-top: 1rpx solid #b3b3b3;
}

.table > view:nth-of-type(1) {
  width: 20%;
  text-align: center;
}

.table > view:nth-of-type(2) {
  width: 60%;
  text-align: center;
}

.table > view:nth-of-type(3) {
  width: 20%;
  position: absolute;
  right: 20rpx;
  text-align: center;
}