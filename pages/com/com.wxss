page {
  height: 100%;
  background-color: rgb(241, 241, 241);
}

.div {
  padding: 40rpx;
  width: calc(100% - 80rpx);
  height: calc(100% - 80rpx);
}

.top {
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-flow: nowrap row;
  justify-content: space-evenly;
  align-items: center;
  background-color: #fff;
  font-size: 28rpx;
}

.top-block {
  position: relative;
  width: 33.3%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.top-block view {
  position: absolute;
  bottom: 20rpx;
}

.top-block image {
  position: relative;
  bottom: 20rpx;
}

.switch {
  position: relative;
  bottom: 4rpx;
  transition: all .3s;
  width: calc(100% / 3);
  height: 4rpx;
  background-color: #4271b8;
}

/* 表单 */
.speech {
  margin-top: 40rpx;
  background-color: #fff;
  padding: 10rpx 40rpx 40rpx 40rpx;
}

input {
  border: 1rpx solid #949494 ;
  padding: 20rpx;
  margin-top: 40rpx;
  width: calc(100% - 40rpx);
}

textarea {
  border: 1rpx solid #949494 ;
  padding: 20rpx;
  margin-top: 40rpx;
  width: calc(100% - 40rpx);
  height: 180rpx;
}