page {
  height: 100%;
  background-color: rgb(241, 241, 241);
}

.div {
  padding: 40rpx;
  width: calc(100% - 80rpx);
  height: calc(100% - 80rpx);
}

.top {
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.top image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 40rpx;
}

.top text {
  font-size: 44rpx;
  color: #4271b8;
  font-weight: 600;
  margin-left: 20rpx;
}

.lesson-view {
  width: 100%;
  height: 160rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  padding: 0 20rpx 0 20rpx;
  box-sizing: border-box;
}

.lesson-name {
  margin-bottom: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
}

.lesson-info {
  font-size: 28rpx;
  color: rgb(66, 66, 66);
}