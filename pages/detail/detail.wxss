page {
  height: 100%;
  background-color: rgb(241, 241, 241);
}

.div {
  padding: 40rpx;
  box-sizing: border-box;
}

.top {
  width: 100%;
  padding: 40rpx;
  background-color: #fff;
  box-sizing: border-box;
  margin-bottom: 400rpx;
}

.top > view {
  margin-bottom: 20rpx;
}

.top > view:nth-of-type(1) {
  color: #4271b8;
  font-size: 38rpx;
  font-weight: 600;
}

.top > view:nth-of-type(2) {
  margin-top: 40rpx;
  font-size: 32rpx;
}

.top > view:nth-of-type(3) {
  margin-top: 80rpx;
  font-size: 28rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: rgb(85, 85, 85);
}

.top > view:nth-of-type(4) {
  margin-top: 60rpx;
  font-size: 28rpx;
}

.top > view:nth-of-type(5) {
  margin-top: 60rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  background-color: #ccc;
}

.comment {
  position: fixed;
  bottom: 200rpx;
  left: calc(50% - 150rpx);
}

.commentdetail > view:nth-of-type(1) {
  margin: 40rpx 0 40rpx 0;
}

.commentdetail > view:nth-of-type(2) {
  display: flex;
  justify-content: space-between;
  color: rgb(73, 73, 73);
  font-size: 28rpx;
}